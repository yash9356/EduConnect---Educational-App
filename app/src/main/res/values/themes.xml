<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EduConnectEducationalApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/color_on_surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/color_secondary</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">1dp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
    </style>

    <style name="Title.Bold">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="Title.ColorPrimary">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitle.Bold" parent="Title.Bold">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SubTitle.Grey" parent="Title.Bold">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="SubHeadLine">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="SubHeadLine.HyperLink">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="SubHeadLine.ColorPrimary">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="drawableTint">?colorPrimary</item>
    </style>

    <style name="SubHeadLine.AutoSize">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:hyphenationFrequency">none</item>
    </style>

    <style name="SubHeadLine.Bold">
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="SubHeadLine.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadLine.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="SubHeadLine.ColorOnPrimary">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="SubHeadLine.Simple">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="IconButton.Top">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">@dimen/top_bar_icon_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/top_bar_icon_vertical_margin</item>
    </style>

    <style name="IconButton.Top.Back">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:contentDescription">@string/back_button</item>
        <item name="srcCompat">@drawable/ic_back_button</item>
    </style>

    !--    Scroll View Style  -->
    <style name="FillParentScrollViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="background">@drawable/screen_background</item>
    </style>

    <style name="AppNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:shadowColor">?colorSurface</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <string name="back_button">Back button</string>

    <!--    ProgressBar Style-->
    <style name="ProgressBar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ShortButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_short_btn</item>
        <item name="elevation">8sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>